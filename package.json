{
  "name": "tsnip-schematics",
  "version": "0.0.0",
  "description": "A schematics for generating Angular test snippets",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "test": "npm-run-all -s build spec:nowatch",
    "test:watch": "npm-run-all -p build:watch spec:watch",
    "spec:nowatch": "jasmine-ts \"src/**/*.spec.ts\"",
    "spec:watch": "nodemon --ext ts --delay 1 --exec node_modules/.bin/jasmine-ts \"src/**/*.spec.ts\""
  },
  "keywords": [
    "schematics",
    "angular",
    "specs",
    "test",
    "snippets"
  ],
  "author": "Craig Ryan",
  "license": "MIT",
  "schematics": "./src/collection.json",
  "dependencies": {
    "@angular-devkit/core": "^8.0.1",
    "@angular-devkit/schematics": "^8.0.1",
    "@schematics/angular": "^8.0.2",
    "@types/jasmine": "^3.3.9",
    "@types/node": "^8.0.31",
    "jasmine": "^3.4.0",
    "typescript": "~3.4.0"
  },
  "devDependencies": {
    "jasmine-ts": "^0.3.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "ts-node": "^8.3.0"
  }
}
